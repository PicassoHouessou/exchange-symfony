{% extends 'admin/base_no_footer.html.twig' %}

{% block body %}

<div class="register-box">
    <div class="register-logo">
        <a href="{{ absolute_url(path('app_home') ) }}"><b>Admin</b>DMV</a>
    </div>

    <div class="card">
        <div class="card-body register-card-body">
            <p class="login-box-msg">Register a new membership</p>

            <form action="" method="post" novalidate="novalidate"">
                <div class="input-group mb-3">
                    {{ form_widget(registrationForm.fullName, {'attr': { 'placeholder': 'Full name'} }) }}
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    {{ form_widget(registrationForm.email, {'attr': { 'placeholder': 'Email'} }) }}
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    {{ form_widget(registrationForm.plainPassword, {'attr': { 'placeholder': 'Password'} }) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    {{ form_widget(registrationForm.confirmPlainPassword, {'attr': { 'placeholder': 'Confirm password'} }) }}
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    {#{ form_widget(registrationForm.roles) } #}
                    {{ form_widget(registrationForm.roles) }}

                </div>
                <div class="row">
                    <!-- /.col -->
                    <div class="col-4 ml-auto">
                        <input type="hidden" name="_admin_registration_form_token" value="{{ csrf_token('_admin_registration_form_token') }}">
                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <a href="{{ absolute_url(path('app_admin_login')) }}" class="text-center">Login</a>
        </div>
        <!-- /.form-box -->
    </div><!-- /.card -->
</div>
<!-- /.register-box -->

{% endblock %}