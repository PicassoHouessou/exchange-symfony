{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        .purchase-resume
        {
            background-color: #222222;
            text-align: center;
        }
    </style>

{% endblock %}
{% block body %}
    <section class="generic-banner relative">
        <div class="container">
            <div class="row height align-items-center justify-content-center">
                <div class="col-lg-10">
                    <div class="generic-banner-content">
                        <h2 class="text-white">Plus qu'un pars</h2>
                        <p class="text-white">Compléter cette étape pour échanger les devises. c'est maintenant</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End banner Area -->
    <!-- Start simple-services Area -->
    <section class="simple-services-area section-gap">
        <div class="container">
            <div class="row">
                <div class="col-md-7 single-services" style="text-align: left !important;">
                    <h3 class="mb-30">Remplissez ces informations</h3>
                    <form class="" action="" method="post" novalidate="novalidate">
                        <div class="form-group">
                            <input class="form-control single-input" type="text"  name="fullName" placeholder="Votre nom complet" >
                            {{ form_errors(conversionForm.fullName) }}
                        </div>
                        <div class="form-group">
                            <input class="form-control single-input" type="text" name="number" placeholder="Numero de telephone">
                            {{ form_errors(conversionForm.number) }}
                        </div>
                        <div class="form-group">
                            <input class="form-control single-input" type="email" name="email"  placeholder="Ton email">
                            {{ form_errors(conversionForm.email) }}
                        </div>
                        <div class="form-group">
                            <input class="form-control single-input" type="hidden" name="currencyFrom" value="{{ app.request.query.get('from') }}" >
                            <input class="form-control single-input" type="hidden" name="currencyTo" value="{{ app.request.query.get('to') }}" >

                        </div>
                        {#
                        <div class="form-group row">
                            <div class="form-group col-md-6">
                                <label for=""  class="text-left ">Monnaie de base </label>
                                <input class="form-control single-input" type="text" placeholder="Numero de telephone">
                            </div>
                            <div class="form-group col-md-6">

                                <label for="" class="text-left">Monnaie d'echange </label>
                                <input class="form-control single-input" type="text" placeholder="Numero de telephone">
                            </div>
                        </div>
                        #}
                        <div class="form-group">
                            <input type="hidden" name="_token" id="_token" value="{{ csrf_token('_token')}}">
                            <input type="submit" class="btn btn-dark" value="Continuer">
                        </div>

                    </form>
                </div>
                <div class="col-md-3 offset-2 purchase-resume">
                    <h3 class="pt-20 pb-20 text-white">Résumé</h3>
                    <div class="row d-flex align-items-center pb-30">
                        <div class="col-md-8 col-sm-8 offset-2">
                            <h5 class="text-white " >Vous échanger </h5><br>
                            <button class="genric-btn primary-border e-large text-uppercase">{{ app.request.query.get('from') }}</button>
                        </div>
                        <div class="col-md-8 col-sm-8 offset-2">
                            <h5  class="text-white mt-20 mb-10">Net à prendre aujourd'hui</h5>
                            <button class="genric-btn primary-border e-large text-uppercase">{{ app.request.query.get('to') }}</button>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block javascripts %}

{% endblock %}

